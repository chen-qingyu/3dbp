{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["containers", "boxes"],
  "properties": {
    "containers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "lx", "ly", "lz"],
        "properties": {
          "id": { "type": "string" },
          "lx": { "type": "integer", "minimum": 1 },
          "ly": { "type": "integer", "minimum": 1 },
          "lz": { "type": "integer", "minimum": 1 },
          "payload": { "type": "number", "minimum": 0 }
        }
      }
    },
    "boxes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "lx", "ly", "lz"],
        "properties": {
          "id": { "type": "string" },
          "lx": { "type": "integer", "minimum": 1 },
          "ly": { "type": "integer", "minimum": 1 },
          "lz": { "type": "integer", "minimum": 1 },
          "weight": { "type": "number", "minimum": 0 }
        }
      }
    }
  }
}
