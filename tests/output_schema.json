{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["plans", "unpacked_boxes"],
  "properties": {
    "plans": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["container", "boxes", "volume_rate"],
        "properties": {
          "container": {
            "type": "object",
            "required": ["id", "lx", "ly", "lz"],
            "properties": {
              "id": { "type": "string" },
              "lx": { "type": "integer", "minimum": 1 },
              "ly": { "type": "integer", "minimum": 1 },
              "lz": { "type": "integer", "minimum": 1 },
              "payload": { "type": "number", "minimum": 0 }
            }
          },
          "boxes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "lx", "ly", "lz", "x", "y", "z"],
              "properties": {
                "id": { "type": "string" },
                "lx": { "type": "integer", "minimum": 1 },
                "ly": { "type": "integer", "minimum": 1 },
                "lz": { "type": "integer", "minimum": 1 },
                "x": { "type": "integer", "minimum": 0 },
                "y": { "type": "integer", "minimum": 0 },
                "z": { "type": "integer", "minimum": 0 },
                "weight": { "type": "number", "minimum": 0 }
              }
            }
          },
          "volume_rate": { "type": "number", "minimum": 0, "maximum": 1 },
          "weight_rate": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },
    "unpacked_boxes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "lx", "ly", "lz"],
        "properties": {
          "id": { "type": "string" },
          "lx": { "type": "integer", "minimum": 1 },
          "ly": { "type": "integer", "minimum": 1 },
          "lz": { "type": "integer", "minimum": 1 },
          "weight": { "type": "number", "minimum": 0 }
        }
      }
    }
  }
}
