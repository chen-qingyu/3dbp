{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["box_types", "containers", "unpacked_boxes"],
  "properties": {
    "box_types": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "lx", "ly", "lz"],
        "properties": {
          "id": { "type": "string" },
          "lx": { "type": "integer", "minimum": 1 },
          "ly": { "type": "integer", "minimum": 1 },
          "lz": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "containers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "boxes", "volume_rate", "weight_rate"],
        "properties": {
          "type": {
            "type": "object",
            "required": ["id", "lx", "ly", "lz"],
            "properties": {
              "id": { "type": "string" },
              "lx": { "type": "integer", "minimum": 1 },
              "ly": { "type": "integer", "minimum": 1 },
              "lz": { "type": "integer", "minimum": 1 }
            }
          },
          "boxes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "type", "x", "y", "z", "orient"],
              "properties": {
                "id": { "type": "string" },
                "type": { "type": "string" },
                "x": { "type": "integer", "minimum": 0 },
                "y": { "type": "integer", "minimum": 0 },
                "z": { "type": "integer", "minimum": 0 },
                "orient": { "type": "integer", "enum": [0, 1, 2, 3, 4, 5] }
              }
            }
          },
          "volume_rate": { "type": "number", "minimum": 0, "maximum": 1 },
          "weight_rate": {
            "type": ["number", "null"],
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "unpacked_boxes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" }
        }
      }
    }
  }
}
